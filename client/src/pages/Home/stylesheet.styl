.homepage
    .choice
        background-repeat no-repeat
        background-size cover
        filter grayscale(0.8) brightness(0.65)
        transition filter 0.2s

        &:hover
            filter grayscale(0.2) brightness(1)

        &.one
            clip-path polygon(0% 0%, 47% 0%, 55% 29%, 47% 41%, 58% 72%, 49% 86%, 55% 100%, 0% 100%)

        &.two
            clip-path polygon(47% 0%, 55% 29%, 47% 41%, 58% 72%, 49% 86%, 55% 100%, 100% 100%, 100% 0%)
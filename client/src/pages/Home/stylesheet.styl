.home-container
  width 100%

  .nav-icons
    justify-content start
    z-index 10

    .icon
      font-size 2rem
      filter brightness(140%)
      transition filter 0.2s

      &:hover, &:focus
        filter brightness(120%)


  .brand
    margin 0
    font-family 'Amatic SC', cursive, Rubik, Karla, Ubuntu, Poppins, Oswald
    place-content stretch center

    a
      overflow hidden
      display inline-flex
      align-items center

      h2
        margin 0
        font-size 5rem
        font-weight bold
        transition transform 0.6s

        &#shok, &#koth, &#dot-tk
          transform translate(0, 0)

        &#shok span
          font-size 5rem
          display inline
          transition transform 0.6s
          // transition-delay 1s

          &#sh, &#o
            transform translateX(0)

      &:hover
        h2
          &#shok
            transform translate(26%, -30%)
            span
              &#sh
                transform translateX(106%)
              &#o
                transform translateX(26%)

          &#koth
            transform translate(0%, 30%)
          &#dot-tk
            transform translateX(175%)



  .equipments-search
    grid-template-rows 7rem fit-content(100%)

  .stuff-preview
    grid-template-rows repeat(2, fit-content(100%))

  .items-details-container
    height fit-content


  @media (min-width: 841px) and (max-width: 1540px)
    grid-template-rows 3.5rem 4.5rem repeat(3, fit-content(100%)) !important



  @media (min-width: 641px) and (max-width: 840px)
    grid-template-columns 6vw 1fr 6vw !important
    grid-template-rows 3.5rem 4.5rem fit-content(100%) !important


  @media (max-width: 640px)
    grid-column-gap unset !important
    grid-template-columns 6vw 1fr 6vw !important
    grid-template-rows 2.5rem 4.5rem fit-content(100%) !important
    padding-bottom 3rem

    .nav-icons
      grid-auto-flow column

    .brand
      align-content end

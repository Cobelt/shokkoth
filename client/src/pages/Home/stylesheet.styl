.home-container
  width 100%

  .nav-icons
    justify-content start
    z-index 10
    color var(--primary-color)

    .icon
      font-size 2rem

  .brand
    font-family 'Amatic SC', cursive, Rubik, Karla, Ubuntu, Poppins, Oswald
    place-content stretch center

    a
      overflow hidden
      display inline-flex
      align-items center

      h2
        margin 0
        font-size 5rem
        font-weight bold
        transition transform 0.6s

        &#shok, &#koth, &#dot-tk
          transform translate(0, 0)

        &#shok span
          font-size 5rem
          display inline
          transition transform 0.6s
          transition-delay 1s

          &#sh, &#o
            transform translateX(0)

      &:hover
        h2
          &#shok
            transform translate(26%, -30%)
            span
              &#sh
                transform translateX(calc(5 * 26%))
              &#o
                transform translateX(calc(2 * 26%))

          &#koth
            transform translate(0%, 30%)
          &#dot-tk
            transform translateX(175%)



  .equipments-search
    grid-template-rows 7rem fit-content(100%)

  .stuff-preview
    grid-template-rows repeat(2, fit-content(100%))

  .items-details-container
    height fit-content


  @media (min-width: 841px) and (max-width: 1540px)
    grid-template-rows 3.5rem 4.5rem repeat(3, fit-content(100%)) !important



  @media (min-width: 641px) and (max-width: 840px)
    grid-template-columns 6vw 1fr 6vw !important
    grid-template-rows 3.5rem 4.5rem repeat(4, fit-content(100%)) !important


  @media (max-width: 640px)
    grid-column-gap unset !important
    grid-template-columns 6vw 1fr 6vw !important
    grid-template-rows 2.5rem 4.5rem repeat(4, fit-content(100%)) !important

    .nav-icons
      --width 2 !important
      --height 1 !important
      grid-auto-flow column

    .stats
      --width 1 !important

    .brand
      align-content end
      --width 3 !important


.stuff-editor
  width 100%

  .dropdown-menu
    img, svg
      cursor pointer
      filter drop-shadow(0.2rem 0.2rem 0.1rem rgba(0, 0, 0, 0))
      transform rotate(0deg) scale(1)
      transition transform 0.3s, filter 0.3s

      &:hover, &.active
        filter drop-shadow(0.2rem 0.2rem 0.1rem rgba(0, 0, 0, 0.2))
        transform rotate(17.5deg) scale(1.35)

  .items-details-container
    height fit-content


  @media (max-width: 640px)
    grid-column-gap unset !important
    grid-template-columns 6vw 1fr 6vw !important
    // grid-template-rows 2.5rem 4.5rem fit-content(100%) !important
    padding-bottom 3rem

    .stats-container .grid
      grid-template-columns 1fr !important

    .nav-icons
      grid-auto-flow column

    .brand
      align-content end

.characters-list
  .character, .empty-character
    align-content center
    justify-content stretch


    .avatar

      height 13em
      min-height 100%
      min-width 145%
      background-size 200%
      background-position 75% 15%
      background-color var(--primary-color-grayscaled-full-opacity)
      display flex
      justify-self center

      position relative

      cursor pointer

      transition transform 0.2s, z-index 0.04s, opacity 0.2s

      z-index 10



      &:not(.row-odd)
        clip-path polygon(23.5% 0, 92.5% 0, 76.5% 100%, 7.5% 100%)

        &.first-of-row
          clip-path polygon(15% 0, 92.5% 0, 76.5% 100%, 15% 100%)

        &.last-of-row
          clip-path polygon(23.5% 0, 85% 0, 85% 100%, 7.5% 100%)

      &.row-odd
        clip-path polygon(7.5% 0, 76.5% 0, 92.5% 100%, 23.5% 100%)

        &.first-of-row
          clip-path polygon(15% 0, 76.5% 0, 92.5% 100%, 15% 100%)

        &.last-of-row
          clip-path polygon(7.5% 0, 85% 0, 85% 100%, 23.5% 100%)



      &:hover
        z-index 15
        transform scale(1.1)


      .new-icon
        display flex
        justify-content center
        width 100%


      .name-and-stuffscount
        align-self flex-end
        align-content center

        display flex
        align-items center
        justify-content space-evenly

        height 20%
        width 100%
        padding 0 10%

        background-color rgba(#333, 0.6)

        .name, .level, .stuffs
          color #dcdcdc
          font-size 1.2rem

        .level
          font-weight 800


      &.breed-12
        background-position-y 55%

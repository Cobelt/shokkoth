@require '../../variables.styl';

.error-404

  .error-text
    display flex
    align-items center
    justify-content center
    font-size 16rem
    font-family Ubuntu
    color #FFFF4E

    text-shadow 4px 0 0 #D8E933, -4px 0 0 #D8E933, 0 4px 0 #D8E933, 0 -4px 0 #D8E933, 2px 2px 0 #D8E933, -2px -2px 0 #D8E933, -2px 2px 0 #D8E933, 2px -2px 0 #D8E933, 0 0 1.6rem #9DB22C

    animation scaleIdle 2s ease-in 0.5s infinite alternate

    filter hue-rotate(132deg) saturate(53.1%) brightness(73.1%)

    img
      width 16rem

  .subtext
    font-size 4rem
    color primary-color
    font-family Ubuntu
    font-weight 900
    text-align center

@keyframes scaleIdle
  from
    transform scale(1)
  to
    transform scale(0.92)

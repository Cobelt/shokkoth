.characters-list
  .character, .empty-character
    align-content center
    justify-content stretch


    .avatar

      height 13em
      min-height 100%
      min-width 145%
      background-size 200%
      background-position 75% 15%
      background-color var(--primary-color-grayscaled)
      display flex
      justify-self center

      position relative

      cursor pointer

      transition transform  0.2s, z-index 0.04s

      z-index 10



      &:not(.row-odd)
        clip-path polygon(23.5% 0, 92.5% 0, 76.5% 100%, 7.5% 100%)

        &.first-of-row
          clip-path polygon(15% 0, 92.5% 0, 76.5% 100%, 15% 100%)

        &.last-of-row
          clip-path polygon(23.5% 0, 85% 0, 85% 100%, 7.5% 100%)

      &.row-odd
        clip-path polygon(7.5% 0, 76.5% 0, 92.5% 100%, 23.5% 100%)

        &.first-of-row
          clip-path polygon(15% 0, 76.5% 0, 92.5% 100%, 15% 100%)

        &.last-of-row
          clip-path polygon(7.5% 0, 85% 0, 85% 100%, 23.5% 100%)



      &::before
        content: ""
        background-color RGBA(var(--primary-color-grayscaled), 0.15)
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        transition background-color 0.3s



      &:hover
        z-index 100
        transform scale(1.1)

        &::before
          background-color rgba(#ccc, 0)




      .pseudo-and-level
        align-self flex-end
        align-content center

        display flex
        align-items center
        justify-content space-evenly

        height 20%
        width 100%
        padding 0 10%

        background-color rgba(#333, 0.6)

        .pseudo
          color #dcdcdc
          font-size 1.2rem

        .level
          color #dcdcdc
          font-size 1.3rem
          font-weight 800


      &.breed-12
        background-position-y 55%





  .empty-character
    filter drop-shadow(5px 0 0px RGBA(var(--primary-color-grayscaled), 0.8));

    .avatar
      background-color RGBA(var(--primary-color-grayscaled), 1)
      transition unset
      cursor not-allowed
      z-index 0

      &::before
        content unset

      &:hover
        transform scale(1)

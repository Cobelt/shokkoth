.stuff-form-container
  .stuff-form
    .show-details
      margin-bottom auto

    @media (max-width: 1540px)
      grid-template-columns fit-content(100%) 1fr !important
      grid-row-gap 3rem

      .equipments-list
        max-height 70vh


    @media (max-width: 1280px)
      .equipments-search
        display inline-grid !important


    @media (max-width: 640px)
      grid-template-columns 1fr !important
      grid-template-rows max-content repeat(3, fit-content(100%)) !important
      grid-row-gap 3rem
      grid-column-gap unset !important

      .equipment-input
        padding 0 15%

      .equipments-list
        max-height 60vh

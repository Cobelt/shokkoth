.stuff-form-container
  .inputs
    @media (max-width: 840px)
      padding-left 0 !important
      padding-right 0 !important

  .stuff-form
    .show-details
      margin-bottom auto

    @media (max-width: 1540px)
      grid-template-columns fit-content(100%) 1fr !important
      grid-row-gap 3rem

      .equipments-list
        max-height 70vh

  @media (max-width: 1040px)
    .stuff-form
      margin-right 0 !important
      margin-bottom 30vh

      .equipment-input
        padding 0 15%

    .equipments-search

      .filters
        --negative-margin 0
        &:before, &:after
          content unset

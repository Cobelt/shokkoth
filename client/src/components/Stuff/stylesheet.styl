.stuff
  .background-line
    background-color background-item
    background-size 100%
    left 0
    right 0
    top 0
    position relative
    z-index 5

  .share-icon, .pseudo, .level
    color var(--primary-color) !important
    align-self end

  .pseudo, .level
    font-weight 600
    align-self stretch
    align-content end

  .pseudo
    justify-self stretch
    justify-content center

    font-size 2rem

  .level
    justify-self right
    font-size 1.5rem

  .share-icon
    justify-self left
    font-size 1.5rem
    margin 0
    padding-bottom 0


  .avatar
    justify-self center
    width: 100%;

    img
      object-fit contain
      height 100%
      min-width 100%
      align-self center
      padding 3rem 0



  // stats
  .life-points
    .life-icon
      height -moz-fill-available
      height -webkit-fill-available
      width 100%

    .hp
      font-weight bold
      place-self center
      color #fafafa

  .row.stat
    align-content center
    margin auto

    .pa-icon, .pm-icon
      max-height 2rem
      min-width 2rem
      align-self end

    .mp, .ap
      font-weight bold


    .mp, .ap
      color var(--primary-color)
      padding 0 0.5rem
      text-align right
      align-self center
    // end



  .rotation-arrow
    align-self center
    z-index 2

    .icon
      padding 0
      margin 0

    &.left
      justify-self left
    &.right
      justify-self right

  .equipment-input
    min-width 3.5rem
    min-height 3.5rem

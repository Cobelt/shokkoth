.stuff
  .background-line
    background-color background-item
    background-size 100%
    left 0
    right 0
    top 0
    position relative
    z-index -1

  .chart-icon, .pseudo, .level
    color var(--primary-color) !important
    align-self end

  .pseudo, .level
    font-weight 600
    align-self stretch
    align-content end

  .pseudo
    justify-self stretch
    justify-content center

    font-size 2rem

  .level
    justify-self right
    font-size 1.5rem

  .chart-icon, .close-icon
    justify-self left
    font-size 1.5rem
    margin 0
    padding-bottom 0
    transition transform 0.4s

  .chart-icon
    transform translateY(0%)
    transition-delay 0.2s
  .close-icon
    transform translateY(-100%)
    z-index 3


  .avatar
    justify-self center
    width 100%

    img
      object-fit contain
      height 100%
      min-width 100%
      align-self center
      padding 3rem 0



  // stats
  .life-points
    .life-icon
      height -moz-fill-available
      height -webkit-fill-available
      height fill-available
      max-height 4rem
      width 100%

    .hp
      font-weight bold
      place-self center
      color #fafafa

  .row.stat
    align-content center
    margin auto

    .pa-icon, .pm-icon
      max-height 2rem
      min-width 2rem
      align-self end

    .mp, .ap
      font-weight bold


    .mp, .ap
      color var(--primary-color)
      padding 0 0.5rem
      text-align right
      align-self center
    // end



  .rotation-arrow
    align-self center
    z-index 2

    .icon
      padding 0
      margin 0

    &.left
      justify-self left
    &.right
      justify-self right

  .equipment-input
    min-width 2.5rem
    min-height 2.5rem





  .stats-inputs-container
    height auto
    width 100%
    z-index 2
    position absolute
    overflow hidden
    right 0
    top 0
    transform scale(0)
    transform-origin top right
    transition transform 0.6s

    > *
      opacity 0
      transition opacity 0.3s

    .grid
      padding 1rem 16% 1rem 2rem


      span
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

        *.header
          font-weight bold

      @media (min-width: 641px) and (max-width: 1040px)
        span:not(.header) em
          display none


      input
        width 100%
        border 0
        margin-top 1px
        margin-bottom 1px
        background-color rgba(255, 255, 255, 0.1)
        color var(--primary-bg)
        outline-width 0

        &:active, &:focus
          background-color rgba(255, 255, 255, 0.3)



  &.stats-mode
    .stats-inputs-container
      transform scale(1)

      > *
        opacity 1
        transition-delay 0.4s


    .chart-icon
      transform translateY(100%)
      transition-delay 0s

    .close-icon
      transform translateY(0%)

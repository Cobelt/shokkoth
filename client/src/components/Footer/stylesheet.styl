.footer
  margin-top auto
  grid-row-gap 0

  > *
    transition color 0.4s

  .ankama-logo
    align-items center
    display flex

    span
      margin-right 5px
      white-space nowrap

    img
      margin-left 1rem
      max-height 2rem
      width auto


  .partenaire, .donation, .social
    padding-top 1vw

  .footer-separator
    margin-left 15%
    margin-right 15%

    &.sm
      margin-left 25%
      margin-right 25%

  .vertical-separator
    margin-top 1em
    margin-bottom 1em
    width 0
    border-left 1px solid var(--font-color-on-primary)

    &.sm
      margin-top 1.5em
      margin-bottom 1.5em

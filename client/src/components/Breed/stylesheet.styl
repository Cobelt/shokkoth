.breed
  width 2.5rem
  position relative
  justify-self center
  cursor pointer
  transition filter var(--border-half-animation-duration)

  &:not(.active):not(:hover)
    filter contrast(45%) brightness(135%)

  &.loading
    transform scale(0)
    display none

  &:not(.loading)
    animation scaleTo1 0.25s ease-in-out forwards;
    animation-delay var(--delay) ms

  &:before, &:after
    content ''
    position absolute
    width 0
    height 0
    background transparent
    border 0em solid transparent
    box-sizing border-box

  &:before
    top 0
    left 0

  &:after
    bottom 0
    right 0

  &:hover, &.active
    &.active
      --bordered-item-bg-hover var(--bordered-item-bg-active)

    &:before, &:after
      border var(--border-width) solid transparent

    &:before
      animation animate-border-before var(--border-half-animation-duration) ease-in forwards;

    &:after
      animation animate-border-after var(--border-half-animation-duration) ease-out forwards;
      animation-delay var(--border-half-animation-duration)

  img
    width 100%
    height 100%
    object-fit contain
    transition transform 0.3s, filter 0.3s


@keyframes appearFromTop {
  0%{
    transform translateY(-100%)
  }
  100%{
    transform translateY(0%)
  }
}

@keyframes scale0to1 {
  0%{
    transform scale(0)
  }
  95%{
    transform scale(1.1)
  }
  100%{
    transform scale(1)
  }
}
@keyframes scale1to0 {
  0%{
    transform scale(1)
  }
  90%{
    transform scale(0)
  }
  95%{
    transform scale(0.1)
  }
  100%{
    transform scale(0)
  }
}


border-item-hover = rgba(#666, 0.20)

@keyframes animate-border-hover-before {
  0%{
    width 0
    height 0
    border-top-color border-item-hover
    border-bottom-color transparent
    border-left-color transparent
    border-right-color transparent
  }
  50%{
    width 100%
    height 0
    border-top-color border-item-hover
    border-right-color border-item-hover
  }
  100%{
    width 100%
    height 100%
    border-top-color border-item-hover
    border-right-color border-item-hover
  }
}

@keyframes animate-border-hover-after {
  0%{
    width 0
    height 0
    border-top-color transparent
    border-bottom-color border-item-hover
    border-left-color transparent
    border-right-color transparent
  }
  50%{
    width 100%
    height 0
    border-bottom-color border-item-hover
    border-left-color border-item-hover
  }
  100%{
    width 100%
    height 100%
    border-bottom-color border-item-hover
    border-left-color border-item-hover
  }
}

@keyframes animate-entry-from-top {
  0%{
    transform translateY(var(--randomize) vh)
  }
  100%{
    transform translateY(0%)
  }
}

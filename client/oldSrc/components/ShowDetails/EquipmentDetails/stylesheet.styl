.equipments-details
  .equipmentdetails-set
    cursor pointer

  .passive
    max-width 80%

  .display-btn
    width 3rem
    height 3rem
    padding 0.5rem
    transition background-color 0.3s, box-shadow 0.3s

    &:hover
      cursor pointer
      background-color rgba(#333, 0.2)
      box-shadow: inset 0 0 0.5rem rgba(#333, 0.2)

    &.active
      background-color rgba(#333, 0.3)
      box-shadow: inset 0 0 1rem rgba(#333, 0.3)
